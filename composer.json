{
    "name": "nekland/tools",
    "license": "MIT",
    "description": "Just some tools to work better with PHP",
    "autoload": {
        "psr-4": { "Nekland\\Tools\\": "src/Tools/", "Nekland\\Utils\\": "src/Utils/" }
    },
    "autoload-dev": {
        "psr-4": { "Nekland\\Utils\\Test\\": "tests/Nekland/Utils/" }
    },
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.3.0",
        "friends-of-phpspec/phpspec-expect": "^4.0",
        "phpunit/phpunit": "^8.5"
    },
    "_comment": [
        "PHPSpec is limited to ^6.x to keep compatibility with PHP7.1"
    ]
}
